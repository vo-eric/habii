{
  "name": "habii-websocket-server",
  "version": "1.0.0",
  "description": "Standalone WebSocket server for Habii animation synchronization",
  "main": "src/server.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun run src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "NODE_ENV=production bun run src/server.ts"
  },
  "dependencies": {
    "socket.io": "^4.7.5",
    "firebase-admin": "^13.4.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  }
}
